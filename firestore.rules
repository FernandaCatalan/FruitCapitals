rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuth() {
      return request.auth != null;
    }

    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    match /users/{userId} {
      allow read: if isAuth() && request.auth.uid == userId;
      allow create: if isAuth();
      allow update: if isAuth() && request.auth.uid == userId;
      allow delete: if isAuth() && getRole() == "jefe";
    }

    match /cuarteles/{id} {
      allow read: if isAuth();
      allow write: if isAuth();
      allow delete: if isAuth() && getRole() == "jefe";
    }

    match /observaciones/{id} {
      allow read: if isAuth();
      allow create: if isAuth() && getRole() == "empleado";
      allow update: if isAuth()
        && getRole() == "empleado"
        && resource.data.uid == request.auth.uid;
      allow delete: if false;
    }

    match /entregas/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /entregas/{id} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'jefe';
      allow write: if request.auth != null;
    }

    match /produccion/{documentId} {
      allow read, write: if true;
    }

    match /cuarteles/{cuartelId} {
      allow read: if isAuth();
      allow write: if isAuth();
      allow delete: if isAuth() && getRole() == "jefe";

      match /hileras/{hileraId} {
        allow read: if isAuth();
        allow write: if isAuth();
        allow delete: if isAuth() && getRole() == "jefe";

        match /matas/{mataId} {
          allow read: if isAuth();
          allow write: if isAuth();
          allow delete: if isAuth() && getRole() == "jefe";

          match /dardos/{dardoId} {
            allow read: if isAuth();
            allow write: if isAuth();
            allow delete: if isAuth() && getRole() == "jefe";

            match /conteo_flores/{docId} {
              allow read, write: if isAuth();
            }

            match /frutos_por_flor/{docId} {
              allow read, write: if isAuth();
            }
          }

          match /conteo_dardos/{docId} {
            allow read, write: if isAuth();
          }
        }

        match /cosecha/{docId} {
          allow read, write: if isAuth();
        }
      }
    }

    match /bins_recepciones/{id} {
      allow read: if isAuth() && (getRole() == "acopio" || getRole() == "jefe");
      allow write: if isAuth() && getRole() == "acopio";
    }

    match /contratistas/{id} {
      allow read, write: if isAuth() && getRole() == "acopio";
    }

    match /contratistas_bins_daily/{id} {
      allow read, write: if isAuth() && getRole() == "acopio";
    }

    match /bins_pesos_samples/{id} {
      allow read, write: if isAuth() && getRole() == "acopio";
    }

    match /contratistas_pesos_daily/{id} {
      allow read: if isAuth() && (getRole() == "acopio" || getRole() == "jefe");
      allow write: if isAuth() && getRole() == "acopio";
    }

    match /descuentos_contratista/{id} {
      allow read: if isAuth() && (getRole() == "acopio" || getRole() == "jefe");
      allow write: if isAuth() && getRole() == "acopio";
    }

    match /pago_config/{id} {
      allow read: if isAuth() && (getRole() == "jefe" || getRole() == "acopio");
      allow write: if isAuth() && getRole() == "jefe";
    }
  }
}
